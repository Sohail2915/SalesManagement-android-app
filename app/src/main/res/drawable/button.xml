<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#cfd8dc"
    tools:targetApi="lollipop">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/White" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="0.1dp" android:color="@color/White" />
            <corners android:radius="20dp" />
            <solid android:color="@color/LightSteelBlue" />
            />
        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
</ripple>