<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kk.kamranqadeer.salemanager.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/front_1"
        android:focusable="true"
        android:baselineAligned="true"
        android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".6"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/barchart">
                </com.github.mikephil.charting.charts.BarChart>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:text="DASH BOARD"
                    android:textSize="@dimen/header"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:textColor="@color/text_colour"
                    android:text="THIS APP POWERD BY FALCONE INTERPRICE"
                    android:textSize="@dimen/detail" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/front_1"
                    android:layout_weight=".9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_effect"
                            android:clickable="true"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/Raw_Material"
                                >
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/material"
                                    android:tint="@color/White" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/White"
                                        android:text="ALL MATERIALS"
                                        android:textSize="15sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="italic"
                                        android:textColor="@color/text_colour"
                                        android:text="First add all material for any activity..."
                                        android:textSize="10sp" />
                                </LinearLayout>



                            </LinearLayout>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/White"></View>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/purchashing"
                                >
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/purchasing" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/White"
                                        android:text="PURCHASING"
                                        android:textSize="15sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="italic"
                                        android:textColor="@color/text_colour"
                                        android:text="Purchas all raw material for production..."
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/White"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/production"
                                >
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/production" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/White"
                                        android:text="PRODUCTION"
                                        android:textSize="15sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="italic"
                                        android:textColor="@color/text_colour"
                                        android:text="This application powerd by FALCONE INTERPRICE"
                                        android:textSize="10sp" />
                                </LinearLayout>


                            </LinearLayout>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/White"></View>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/sale">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/sale" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/White"
                                        android:text="PRODUT SALE"
                                        android:textSize="15sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="italic"
                                        android:textColor="@color/text_colour"
                                        android:text="All product sale..."
                                        android:textSize="10sp" />
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/White"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:background="@drawable/ripple_effect"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:id="@+id/record"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/record" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="@color/White"
                                android:text="RECORDS"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/text_colour"
                                android:text="All production record..."
                                android:textSize="10sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/text_colour"
                                android:text="All sale record..."
                                android:textSize="10sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/text_colour"
                                android:text="All material used and purchas record..."
                                android:textSize="10sp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_navigate_next_black_24dp"
                            android:layout_height="match_parent"
                            android:tint="@color/White"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/front_1"
        app:itemIconTint="@color/White"
        app:itemBackground="@drawable/ripple_effect"
        android:id="@+id/navigation"
        app:menu="@menu/drawmenu"
        app:itemTextColor="@color/White"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
