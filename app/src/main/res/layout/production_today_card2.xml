<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/White"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Production_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="DATE"
            android:textColorHint="@color/ForestGreen"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_info_black_24dp"
            android:tint="@color/White"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Production_textm5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:text="LABOUR NAME"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/Production_textm5_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="NAME"
                    android:textColor="@color/White"
                    android:textColorHint="@color/ForestGreen"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Production_textm1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="TODAY_PRODUCTION"
                    android:layout_gravity="center"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/Production_textm1_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:textColor="@color/text_colour"
                    android:textSize="12sp"
                    android:text="#"
                    android:textColorHint="@color/ForestGreen"
                    android:textStyle="italic"
                    android:gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="TODAY LABOUR WORK COST"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm4_4"
                    android:layout_height="27dp"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="AMOUNT#"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="TODAY PRODUCTION COST"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm3_3"
                    android:layout_height="27dp"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="AMOUNT#"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="PRODUCTION TOTAL AMOUNT"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Production_textm2_2"
                    android:layout_height="27dp"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="AMOUNT#"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="DAY"
        android:textColorHint="@color/ForestGreen"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/White"></View>
</LinearLayout>