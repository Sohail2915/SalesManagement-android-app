<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/ripple_effect"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/White"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".16"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:backgroundTint="@color/White"
                android:tint="@color/White"
                android:scaleType="center"
                android:src="@drawable/ic_delete_sweep_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_colour"
                android:textSize="12sp"
                android:gravity="center"
                android:text="Sweep" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight=".002"
            android:layout_height="match_parent"
            android:background="@color/White"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="Material name"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center|left" />
                <TextView
                    android:id="@+id/name_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:gravity="center|left"
                    android:text="NAME"
                    android:textColorHint="@color/ForestGreen"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/t_m_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="HOW NAME MATERIAL USED"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center|left" />
                <TextView
                    android:id="@+id/t_1_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:text="MATER#"
                    android:textStyle="italic"
                    android:gravity="center|left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/t_m_2"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="USED MATERIAL TOTAL RS"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center|left" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/t_m_2_2"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:text="AMOUNT#"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:gravity="center|left" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textColor="@color/text_colour"
                android:textSize="8sp"
                android:gravity="center"
                android:text="THIS MATERIAL USED FOR#"
                android:textStyle="italic" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight=".002"
            android:layout_height="match_parent"
            android:background="@color/White"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="match_parent"
            android:tint="@color/White"
            android:scaleType="center"
            android:src="@drawable/ic_info_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/White"></View>

</LinearLayout>