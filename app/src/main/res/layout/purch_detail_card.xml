<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/ripple_effect"
    android:layout_marginTop="5dp"
    android:layout_height="45dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/White"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".17"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight=".2"
                android:layout_height="0dp"
                android:backgroundTint="@color/White"
                android:tint="@color/White"
                android:scaleType="center"
                android:src="@drawable/ic_delete_sweep_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_colour"
                android:textSize="12sp"
                android:textStyle="italic"
                android:gravity="center"
                android:text="Sweep" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight=".002"
            android:layout_height="match_parent"
            android:background="@color/White"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:rowCount="2"
            android:columnCount="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:text="Material name"
                    android:layout_gravity="center"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:gravity="center|left" />
                <TextView
                    android:id="@+id/name_1"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:gravity="center|left"
                    android:text="NAME"
                    android:textColorHint="@color/ForestGreen"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/t_m_1"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:text="Total amount"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:gravity="center|left" />
                <TextView
                    android:id="@+id/t_1_1"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:text="AMOUNT"
                    android:textColorHint="@color/ForestGreen"
                    android:textStyle="bold"
                    android:gravity="center|left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:id="@+id/t_m_2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:text="Material"
                    android:textStyle="italic"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:gravity="center|left" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:id="@+id/t_m_2_2"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:text="Weinght+Scale"
                    android:textColorHint="@color/ForestGreen"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:gravity="center|left" />
                <TextView
                    android:id="@+id/t_3_3"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_colour"
                    android:textSize="10sp"
                    android:gravity="center|left"
                    android:text="Quntity"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/t_3_2"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:textColor="@color/White"
                    android:textSize="10sp"
                    android:gravity="center|left"
                    android:text="one_piceprice"
                    android:textColorHint="@color/ForestGreen"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight=".002"
        android:layout_height="0dp"
        android:background="@color/White"></View>
</LinearLayout>